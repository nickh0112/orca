generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Batch {
  id          String      @id @default(cuid())
  name        String
  status      BatchStatus @default(PENDING)
  searchTerms String?     // JSON array of custom search terms
  userEmail   String?     // email of person who created the batch
  clientName  String?     // client/brand this batch is for
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  completedAt DateTime?
  creators    Creator[]

  @@index([userEmail])
}

model Creator {
  id          String        @id @default(cuid())
  name        String
  socialLinks String        // JSON array of social media URLs
  status      CreatorStatus @default(PENDING)

  // Per-platform status tracking
  instagramStatus   PlatformStatus @default(NOT_REQUESTED)
  youtubeStatus     PlatformStatus @default(NOT_REQUESTED)
  tiktokStatus      PlatformStatus @default(NOT_REQUESTED)
  webSearchStatus   PlatformStatus @default(NOT_REQUESTED)

  // Language for profanity detection
  language    String        @default("en")

  batchId     String
  batch       Batch         @relation(fields: [batchId], references: [id], onDelete: Cascade)
  report      Report?
  attachments Attachment[]
  retryCount  Int           @default(0)
  lastError   String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Report {
  id            String    @id @default(cuid())
  creatorId     String    @unique
  creator       Creator   @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  riskLevel     RiskLevel @default(UNKNOWN)
  summary       String?
  findings      String    // JSON array of findings
  rawResults    String    // JSON of raw API results
  searchQueries String    // JSON array of queries executed
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum BatchStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum CreatorStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum RiskLevel {
  LOW
  MEDIUM
  HIGH
  CRITICAL
  UNKNOWN
}

enum PlatformStatus {
  NOT_REQUESTED
  PENDING
  READY
  FAILED
}

model Attachment {
  id          String   @id @default(cuid())
  creatorId   String
  creator     Creator  @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  type        String   // brands-instagram, keywords-youtube, profanity-tiktok, statistics, etc.
  platform    String?  // instagram, youtube, tiktok, web
  data        String   // JSON blob
  createdAt   DateTime @default(now())

  @@index([creatorId, type])
}
